<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_details_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16"
    tools:context=".MovieDetailsActivity"
    android:background="@drawable/detail_background">
    <LinearLayout
        android:id="@+id/movie_details_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_16">
        <ImageView
            android:id="@+id/close_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close_button"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_150"
            android:layout_marginTop="@dimen/dimen_5"
            android:src="@color/white"
            android:visibility="gone"/>
        <WebView
            android:id="@+id/youtube_video"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_150"
            android:layout_marginTop="@dimen/dimen_5"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_5"
            android:inputType="textMultiLine"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/movie_plot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plot"
            android:textSize="@dimen/txt_size_14"
            android:layout_marginTop="@dimen/dimen_5"
            android:inputType="textMultiLine"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/movie_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:textSize="@dimen/txt_size_14"
            android:layout_marginTop="@dimen/dimen_5"
            android:inputType="textMultiLine"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/movie_main_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Cast"
            android:textSize="@dimen/txt_size_14"
            android:layout_marginTop="@dimen/dimen_5"
            android:inputType="textMultiLine"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/movie_number_of_episodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of episodes"
            android:textSize="@dimen/txt_size_14"
            android:layout_marginTop="@dimen/dimen_5"
            android:inputType="textMultiLine"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/movie_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textSize="@dimen/txt_size_14"
            android:layout_marginTop="@dimen/dimen_5"
            android:inputType="textMultiLine"
            android:visibility="gone"/>
        <ProgressBar
            android:id="@+id/details_loader"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="visible" />
        <TextView
            android:id="@+id/detail_no_data_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Data Available"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
